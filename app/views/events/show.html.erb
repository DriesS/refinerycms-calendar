<% content_for :body_content_title do %>
  <%= @events.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @events.title %>
    </p>
  </section>
  <section>
    <h1>Start At</h1>
    <p>
      <%=raw @events.start_at %>
    </p>
  </section>
  <section>
    <h1>End At</h1>
    <p>
      <%=raw @events.end_at %>
    </p>
  </section>
  <section>
    <h1>Venue Name</h1>
    <p>
      <%=raw @events.venue_name %>
    </p>
  </section>
  <section>
    <h1>Venue Address</h1>
    <p>
      <%=raw @events.venue_address %>
    </p>
  </section>
  <section>
    <h1>Ticket Price</h1>
    <p>
      <%=raw @events.ticket_price %>
    </p>
  </section>
  <section>
    <h1>Ticket Link</h1>
    <p>
      <%=raw @events.ticket_link %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @events.description %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @events.image, nil %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="events">
      <% @all_events.each do |events| %>
        <li>
          <%= link_to events.title, events_url(events) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
