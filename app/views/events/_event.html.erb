<% 
	featured ||= false
	individual ||= false
	archive ||= false
	category ||= false
-%>

	<% unless individual -%>
		<h1><%= link_to event.title, event %></h1>
	<% end -%>
	
	<% if featured or individual -%>
		<section>
	    <%= image_fu event.image, "200x200#c" %>
	  </section>
	<% end -%>
	
  <section>
    <h1>Start At</h1>
    <p>
      <%= event.start_at.strftime('%b %e, %Y %I:%M%p') %>
    </p>
  </section>
  <section>
    <h1>End At</h1>
    <p>
      <%= event.end_at.strftime('%b %e, %Y %I:%M%p') %>
    </p>
  </section>
  <section>
    <h1>Venue Name</h1>
    <p>
      <%= event.venue_name %>
    </p>
  </section>
  <section>
    <h1>Venue Address</h1>
    <p>
      <%= event.venue_address %>
    </p>
  </section>

<% unless archive -%>
	<% unless event.ticket_price.blank? -%>
	  <section>
	    <h1>Ticket Price</h1>
	    <p>
	      <%=number_to_currency event.ticket_price %>
	    </p>
	  </section>
	<% end -%>
	<% unless event.ticket_link.blank? -%>
	  <section>
	    <h1>Ticket Link</h1>
	    <p>
	      <%=auto_link event.ticket_link %>
	    </p>
	  </section>
	<% end -%>
<% end -%>

  <section>
		<% if individual -%>
    	<%=raw event.description %>
		<% else -%>
			<%= simple_format(truncate event.description, :length => 200) %>
		<% end -%>
  </section>
  

  
<% if individual -%>
	<section id="share_this_event">
	  <ul>
	    <li class="facebook"><script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like href="<%= request.url %>" layout="box_count" show_faces="false" width="55" font=""></fb:like></li>
	    <li class="twitter"><a href="http://twitter.com/share" class="twitter-share-button" data-count="vertical">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script></li>
	  </ul>
	</section>

  <nav id="prevnext_nav">
		<% if event.prev.present? -%>
		  <%= link_to event_path(event.prev), :class => "prev button" do -%>
  			<h1>Previous</h1>
  			<h2><%=truncate event.prev.title, :length => 38 %></h2>
  		<% end -%>
	  <% else -%>
  	  <span class="prev disabled">
  	    <h1>Previous</h1>
				<h2>&nbsp;</h2>
  	  </span>
	  <% end -%>
	
		<%= link_to events_path, :class => "home button" do -%>
			<h1>Events</h1>
			<h2>Home</h2>
		<% end -%>
		
		<% if event.next.present? -%>
		  <%= link_to event_path(event.next), :class => "next button" do -%>
  			<h1>Next</h1>
  			<h2><%=truncate event.next.title, :length => 38 %></h2>
  		<% end -%>
    <% else -%>
  	  <span class="next disabled">
  	    <h1>Next</h1>
				<h2>&nbsp;</h2>
  	  </span>
	  <% end -%>
	</nav><!--#event_nav-->
<% end -%>